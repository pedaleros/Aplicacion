<?xml version='1.0' encoding='utf-8'?>
<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id = "com.haltingproblem.pedaleros"
        version = "1.1.0">
    <name>Pedaleros</name>
    <description>
        Aplicacion que muestra un mapa con capas para cletas.
    </description>
    <author href="https://www.facebook.com/Seba.MezaS" email="tan.meza@gmail.com" >
        HaltingProblem Team
    </author>
    <gap:platforms>
        <gap:platform name="android" minVersion="2.1" />
		<gap:platform name="ios" />
    </gap:platforms>
    <icon src="img/icon.png" gap:role="default"/>

	<gap:splash src="img/spl-ver.png" width="320" height="480" />
	<gap:splash src="img/spl-hor.png" width="480" height="320" />

	
    <feature name="http://api.phonegap.com/1.0/geolocation"/>
    <feature name="http://api.phonegap.com/1.0/network"/>
</widget>


